{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node"
    },
    "include": ["src/**/*"]
}
